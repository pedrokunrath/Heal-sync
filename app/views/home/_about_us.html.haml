.w-full.min-h-screen
  .container.mx-auto
    .grid.grid-cols-1.py-32.gap-24.lg:grid-cols-3
      .flex.flex-col.justify-center
        %h1.leading-tight.text-4xl.font-extrabold
          = t(".title").html_safe
        .text-xl.font-normal.text-gray-500.text-justify.mt-6
          = t(".description").html_safe

        .flex
          = link_to products_path, class: "hover:underline underline-offset-1 focus:outline-none leading-none text-lg font-medium text-primary-600 mt-6 flex" do
            = t(".cta")
            = heroicon "arrow-right", variant: :solid, options: { class: "h-5 w-5 ml-2" }

      .h-full.space-y-12
        .space-y-2{class: 'h-1/2'}
          = lucide_icon "trophy", class: "h-12 w-12 text-primary-600 p-2 bg-primary-300 rounded-md"
          .leading-tight.text-xl.font-bold
            %h2= t(".star_title").html_safe
          .text-base.font-normal.text-gray-500
            = t(".star_description").html_safe

        .space-y-2{class: 'h-1/2'}
          = lucide_icon "truck", class: "h-12 w-12 text-primary-600 p-2 bg-primary-300 rounded-md"
          .leading-tight.text-xl.font-bold
            %h2= t(".truck_title").html_safe
          .text-base.font-normal.text-gray-500
            = t(".truck_description").html_safe

      .h-full.space-y-12
        .space-y-2{class: 'h-1/2'}
          = lucide_icon "rocket", class: "h-12 w-12 text-primary-600 p-2 bg-primary-300 rounded-md"
          .leading-tight.text-xl.font-bold
            %h2= t(".rocket_title").html_safe
          .text-base.font-normal.text-gray-500
            = t(".rocket_description").html_safe

        .space-y-2{class: 'h-1/2'}
          = lucide_icon "headset", class: "h-12 w-12 text-primary-600 p-2 bg-primary-300 rounded-md"
          .leading-tight.text-xl.font-bold
            %h2= t(".support_title").html_safe
          .text-base.font-normal.text-gray-500
            = t(".support_description").html_safe