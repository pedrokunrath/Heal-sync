<%= link_to @link, class: 'group w-full' do %>
  <div class="group-hover:bg-gray-100 bg-white border duration-200 border-gray-200 rounded-lg shadow mx-auto">

    <%= image_tag @image, class: 'rounded-t-lg max-h-40 w-full object-cover' %>
    <div class="p-5">

      <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 group-hover:text-primary-500 group-hover:underline duration-200"><%= @title %></h5>
      <p class="mb-3 text-gray-600 font-bold"><%= @category %> - <%= @time_to_read %></p>
      <p class="mb-3 font-normal text-gray-700"><%= @description %></p>
      <div class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-blue-300">
        <%= t('shared.read_more') %>
        <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
      </div>
    </div>
  </div>
<% end %>
